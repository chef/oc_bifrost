{sys, [
       {lib_dirs, ["../deps", "../apps"]},
       {rel,"oc_heimdall","0.0.1",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         eper,
         jiffy,
         lager,
         epgsql,
         sqerl,
         webmachine,
         heimdall
        ]},
     {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "oc_heimdall"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},

       {app, eper, [{incl_cond, include}]},
       {app, jiffy, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]},
       {app, epgsql, [{incl_cond, include}]},
       {app, sqerl, [{incl_cond, include}]},
       {app, heimdall, [{incl_cond, include}]}
      ]}.

{target_dir, "oc_heimdall"}.
{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/oc_heimdall", "bin/oc_heimdall"},
           {template, "files/sys.config", "etc/sys.config"},
           {copy, "files/vm.args", "etc/vm.args"}
          ]}.
